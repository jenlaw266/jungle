
  <table class="table table-bordered">
  <thead>
  
    <tr>
      <th colspan="2">Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.line_items.each do |item| %>
      <tr>
        <td>
          <%= image_tag item.product.image.tiny %>
        </td>
        <td>
          <h4><%= item.product.name %></h4>
          <br>
          <p><%= item.product.description %></p>
        </td>
        <td>
          <%= item.quantity %>
        </td>
        <td>
          <%= humanized_money_with_symbol item.total_price %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">
        TOTAL:
      </th>
      <th>
        <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
      </th>
    </tr>
    <tr>
      <th colspan="3">
        EMAIL:
      </th>
      <th>
        <%= @order.email %>
      </th>
    </tr>
  </tfoot>
</table>
  
